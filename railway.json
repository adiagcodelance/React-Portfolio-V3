{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run build:production && npm start",
    "healthcheckPath": "/api/health"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "${{ PORT }}",
        "DATABASE_URL": "${{ DATABASE_URL }}",
        "JWT_SECRET": "${{ JWT_SECRET }}",
        "FRONTEND_URL": "${{ RAILWAY_PUBLIC_DOMAIN }}"
      }
    }
  }
}